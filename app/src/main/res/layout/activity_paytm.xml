<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaytmActivity"><![CDATA[




    "
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="49dp" />







    ]]>

    <EditText
        android:id="@+id/name"
        android:layout_width="339dp"
        android:layout_height="59dp"
        android:hint="Name"
        app:layout_constraintBottom_toTopOf="@+id/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upi_id" />

    <EditText
        android:id="@+id/upi_id"
        android:layout_width="338dp"
        android:layout_height="54dp"
        android:layout_below="@+id/name"
        android:hint="UPI ID"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/amount_et"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:layout_below="@+id/upi_id"
        app:layout_constraintBottom_toTopOf="@+id/send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note" />

    <EditText
        android:id="@+id/note"
        android:layout_width="346dp"
        android:layout_height="54dp"
        android:hint="Note"
        android:layout_below="@+id/amount_et"
        app:layout_constraintBottom_toTopOf="@+id/amount_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <Button
        android:id="@+id/send"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/note"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:text="Pay Now"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="296dp" />
</RelativeLayout>
